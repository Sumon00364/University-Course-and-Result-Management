@using System.Web.UI.WebControls
@model UniversityManagementSystemWebApp.Models.UserDefinedModels.Student

@{
    ViewBag.Title = "Create";
}

<h2>Register Student</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.StudentName, new { @class = "" })
                @Html.TextBoxFor(model => model.StudentName, new { @class = "form-control",PlaceHolder="Please enter student name...", Type="text"})
                @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.StudentEmail, new { @class = " " })
                @Html.TextBoxFor(model => model.StudentEmail, new { @class = "form-control",PlaceHolder="Enter student email address..", type="text"})
                @Html.ValidationMessageFor(model => model.StudentEmail, "", new { @class = "text-danger" })
            </div>
         <br/>
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.StudentContactNo, htmlAttributes: new { @class = "" })
                @Html.EditorFor(model => model.StudentContactNo, new { htmlAttributes = new { @class = "form-control", PlaceHolder="Enter student contact number..", type="text"} })
                @Html.ValidationMessageFor(model => model.StudentContactNo, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.RegistrationDate, htmlAttributes: new { @class = "" })
                @Html.TextBoxFor(model => model.RegistrationDate,new { @class = "form-control", PlaceHolder="Enter registration date...."})
                @Html.ValidationMessageFor(model => model.RegistrationDate, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "" })
                @Html.TextAreaFor(model => model.Address, new { @class = "form-control", PlaceHolder="Enter student address....."})
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.DepartmentId, "Department", new { @class = " " })
                @Html.DropDownList("DepartmentId", null,  new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.RegistrationNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RegistrationNumber, new { htmlAttributes = new { @class = "form-control" }  })
                @Html.ValidationMessageFor(model => model.RegistrationNumber, "", new { @class = "text-danger" })
            </div>
        </div>*@
        <br/>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <button class="btn btn-default">
        @Html.ActionLink("View All Students", "Index")
    </button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
