@using System.Web.UI.WebControls
@model UniversityManagementSystemWebApp.Models.UserDefinedModels.Course

@{
    ViewBag.Title = "Create";
}

<h2>Save Course</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.CourseCode, new { @class = " " })
                @Html.TextBoxFor(model => model.CourseCode, new { @class = "form-control", PlaceHolder="Please enter course code...", type="text"})
                @Html.ValidationMessageFor(model => model.CourseCode, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.CourseName, new { @class = "" })
                @Html.TextBoxFor(model => model.CourseName, new { @class = "form-control", PlaceHolder="Please enter course name ..." })
                @Html.ValidationMessageFor(model => model.CourseName, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.CourseCredit, new { @class = " " })
                @Html.TextBoxFor(model => model.CourseCredit, new { @class = "form-control", PlaceHolder="Please enter course credit..."})
                @Html.ValidationMessageFor(model => model.CourseCredit, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.CourseDescription,"Description",  new { @class = " " })
                @Html.TextAreaFor(model => model.CourseDescription,  new { @class = "form-control", PlaceHolder="Enter course description..."})
                @Html.ValidationMessageFor(model => model.CourseDescription, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.DepartmentId, "Department", htmlAttributes: new { @class = "" })
                @Html.DropDownList("DepartmentId", null, "---Select department---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group, col-md-offset-3">
            @Html.LabelFor(model => model.SemesterId, "Semester", new { @class = "" })
                @Html.DropDownList("SemesterId", null, "---Select Semester---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SemesterId, "", new { @class = "text-danger" })
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <button class="btn btn-default">
        @Html.ActionLink("View All Courses", "Index")
    </button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
