@model IEnumerable<UniversityManagementSystemWebApp.Models.UserDefinedModels.Course>

@{
    ViewBag.Title = "ViewCourseStatics";
}

<h2>View Course Statics</h2>

<p>
    <button class="btn btn-default">
        @Html.ActionLink("Assign Course To Teacher", "AssignCourseToTeacher")
    </button>
</p>
@using (Html.BeginForm())
{
    @Html.Label("Department", new {@class = ""})
    
    @Html.DropDownList("DepartmentId", null, "Select....", new {@class = "form-control", @onchange = @"form.submit();"})
  
}
    <br/>
<h4 class="breadcrumb" style="text-align: center">Course Information</h4>
    
<style>
    body {
        counter-reset: Serial NO;
    }

    table {
        width: 100%;
    }

    tr td:first-child:before {
        counter-increment: Serial; /*increment the serial counter*/
        content: counter(Serial); /*Display the Counter*/
    }

    table, tr, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    tr, th, td {
        padding: 5px;
        text-align: center;
    }

    table tr:nth-child(even) {
        background-color: blanchedalmond;
    }

    table tr:nth-child(odd) {
        background-color: yellowgreen;
    }

    table th {
        background-color: black;
        color: white;
    }
</style>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </th>*@
        <th>
            Serial No.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseCode)
        </th>
        <th>
            @Html.DisplayName("Name/Title")
        </th>
        <th>
            @Html.DisplayName("Semester")
        </th>
        <th>
            @Html.DisplayName("Assigned To")
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CourseCredit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseDescription)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
            @Html.DisplayFor(modelItem => item.Department.DepartmentName)
        </td>*@
            <td>
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester.SemesterName)
            </td>
            <td>
                @if (item.IsAssigned == true)
                {
                    @Html.DisplayFor(modelItem => item.Teacher.TeacherName)
                }
                @if (item.IsAssigned == false)
                {
                    @Html.DisplayName("Not Assigned Yet");
                }
            </td>
        </tr>
    }

</table>

