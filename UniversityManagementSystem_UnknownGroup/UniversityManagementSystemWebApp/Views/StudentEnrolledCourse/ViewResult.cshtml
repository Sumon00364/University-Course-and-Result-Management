@model IEnumerable<UniversityManagementSystemWebApp.Models.UserDefinedModels.StudentEnrolledCourse>

@{
    ViewBag.Title = "ViewResult";
}

<h2>View Result</h2>

<p>
    <button class="btn btn-default">
        @Html.ActionLink("Save Student Result", "SaveStudentResult")
    </button>
</p>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group, col-md-offset-3">
            @Html.Label("StudentId", "Student Reg No.", htmlAttributes: new {@class = ""})
                @Html.DropDownList("StudentId", null, "Select....", new {@class = "form-control", @onchange = @"form.submit();"})
        </div>
        <br/>
        <div class="form-group, col-md-offset-3">
            @Html.Label("StudentName", "Name",  new { @class = " " })
                @Html.TextBox("StudentName", (string)@ViewBag.StudentName, new { @class = "form-control", @readonly = "readonly"})
        </div>

        <div class="form-group, col-md-offset-3">
            @Html.Label("StudentEmail", "Email",  new { @class = "" })
                @Html.TextBox("StudentEmail", (string)@ViewBag.StudentEmail, new { @class = "form-control", @readonly = "readonly"})
        </div>

        <div class="form-group, col-md-offset-3">
            @Html.Label("StudentDepartment", "Department", new {@class = ""})
                @Html.TextBox("StudentDepartment", (string) @ViewBag.StudentDepartment, new {@class = "form-control", @readonly = "readonly"})
        </div>

        <div class="form-group">
            @*<div class="col-md-offset-4 col-md-10">
                <input type="submit" value="Make PDF" class="btn btn-default" />
            </div>*@
        </div>
    </div>
}
    
<style>
    body {
        counter-reset: Serial NO;
    }

    table {
        width: 100%;
    }

    tr td:first-child:before {
        counter-increment: Serial; /*increment the serial counter*/
        content: counter(Serial); /*Display the Counter*/
    }

    table, tr, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    tr, th, td {
        padding: 5px;
        text-align: center;
    }

    table tr:nth-child(even) {
        background-color: blanchedalmond;
    }

    table tr:nth-child(odd) {
        background-color: yellowgreen;
    }

    table th {
        background-color: black;
        color: white;
    }
</style>
<table class="table">
    <tr>
        <th>
            Serial No.
        </th>
        <th>
            @Html.DisplayName("Course Code")
        </th>
        <th>
            @Html.DisplayNameFor(model=> model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayName("Grade")
        </th>
     
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            
        </td>
