            @Html.ActionLink("Edit", "Edit", new { id=item.EnrolledId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EnrolledId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EnrolledId })
        </td>*@
    </tr>
}

</table>
