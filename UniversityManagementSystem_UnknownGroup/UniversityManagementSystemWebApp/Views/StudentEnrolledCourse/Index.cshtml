@model IEnumerable<UniversityManagementSystemWebApp.Models.UserDefinedModels.StudentEnrolledCourse>

@{
    ViewBag.Title = "Index";
}

<h2>View All Enrolled Courses</h2>

<p>
    @Html.ActionLink("Enroll In a Course", "Create")
</p>
<style>
    body {
        counter-reset: Serial NO;
    }

    table {
        width: 100%;
    }

    tr td:first-child:before {
        counter-increment: Serial; /*increment the serial counter*/
        content: counter(Serial); /*Display the Counter*/
    }

    table, tr, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    tr, th, td {
        padding: 5px;
        text-align: center;
    }

    table tr:nth-child(even) {
        background-color: blanchedalmond;
    }

    table tr:nth-child(odd) {
        background-color: yellowgreen;
    }

    table th {
        background-color: black;
        color: white;
    }
</style>
<table class="table">
    <tr>
        <th>
            Serial No.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentDepartment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrolledDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GradeLetter)
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentDepartment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnrolledDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GradeLetter)
        </td>
